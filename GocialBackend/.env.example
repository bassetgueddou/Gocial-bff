# Configuration Flask
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production

# Base de donn√©es
DATABASE_URL=sqlite:///gocial.db
# Pour PostgreSQL: postgresql://user:password@localhost:5432/gocial
# Pour MySQL: mysql+pymysql://user:password@localhost:3306/gocial

# JWT
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 heure en secondes

# Email (optionnel)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Frontend URL (CORS)
FRONTEND_URL=http://localhost:8081

# Upload config
MAX_CONTENT_LENGTH=16777216  # 16MB max upload
UPLOAD_FOLDER=uploads
